        function updateDailyScripture() {
            const today = new Date();
            const currentMonth = today.getMonth(); // 0-11
            const dayOfMonth = today.getDate(); // 1-31
            
            const monthScriptures = monthlyScriptures[currentMonth];
            const scriptureIndex = (dayOfMonth - 1) % monthScriptures.length;
            const todaysScripture = monthScriptures[scriptureIndex];
            
            document.getElementById('scriptureText').textContent = `"${todaysScripture.text}"`;
            document.getElementById('scriptureReference').textContent = `üìñ - ${todaysScripture.reference}`;
        }

        let currentPhase = 'power';
        let fastingSchedule = {
            power: { fasting: 16, eating: 8, startTime: 10 }, // Start eating at 10 AM
            cycle: { fasting: 12, eating: 12, startTime: 8 }, // Start eating at 8 AM
            rest: { fasting: 12, eating: 12, startTime: 8 }   // Start eating at 8 AM
        };

        let phaseOrder = ['power', 'cycle', 'rest'];
        let currentPhaseIndex = 0;

        // Phase toggle functionality
        document.getElementById('phaseToggleButton').addEventListener('click', function() {
            // Cycle to next phase
            currentPhaseIndex = (currentPhaseIndex + 1) % phaseOrder.length;
            currentPhase = phaseOrder[currentPhaseIndex];
            updatePhaseButton();
            updateDisplay();
        });

        function updatePhaseButton() {
            let phaseText = '';
            let scheduleText = '';
            
            if (currentPhase === 'power') {
                phaseText = 'Power Phase';
                scheduleText = '(16:8)';
            } else if (currentPhase === 'cycle') {
                phaseText = 'On Cycle Phase';
                scheduleText = '(12:12)';
            } else if (currentPhase === 'rest') {
                phaseText = 'Rest Phase';
                scheduleText = '(12:12)';
            }
            
            document.querySelector('.phase-name').textContent = phaseText;
            document.querySelector('.phase-schedule').textContent = scheduleText;
        }

        function updateDisplay() {
            const phase = fastingSchedule[currentPhase];
            const now = new Date();
            
            // Update phase display
            let phaseText = '';
            if (currentPhase === 'power') phaseText = 'Power Phase (16:8)';
            else if (currentPhase === 'cycle') phaseText = 'On Cycle Phase (12:12)';
            else if (currentPhase === 'rest') phaseText = 'Rest Phase (12:12)';
            
            document.getElementById('currentPhase').textContent = phaseText;
            
            // Calculate eating window times
            const startHour = phase.startTime;
            const endHour = (startHour + phase.eating) % 24;
            
            const startTime = formatTime(startHour);
            const endTime = formatTime(endHour);
            
            // Determine if currently in eating or fasting window
            const currentHour = now.getHours();
            let isEatingWindow;
            
            if (endHour > startHour) {
                isEatingWindow = currentHour >= startHour && currentHour < endHour;
            } else {
                isEatingWindow = currentHour >= startHour || currentHour < endHour;
            }
            
            // Update window status
            const statusElement = document.getElementById('windowStatus');
            if (isEatingWindow) {
                statusElement.textContent = 'Currently in Eating Window';
                statusElement.className = 'window-status eating-window';
            } else {
                statusElement.textContent = 'Currently Fasting';
                statusElement.className = 'window-status fasting-window';
            }
            
            document.getElementById('windowTimes').textContent = `Eating Window: ${startTime} - ${endTime}`;
            
            // Calculate next window change
            calculateNextWindow(isEatingWindow, startHour, endHour);
        }

        function calculateNextWindow(isEating, startHour, endHour) {
            const now = new Date();
            let nextChange = new Date();
            
            if (isEating) {
                // Next change is start of fasting (end of eating window)
                nextChange.setHours(endHour, 0, 0, 0);
                if (nextChange <= now) {
                    nextChange.setDate(nextChange.getDate() + 1);
                }
                document.getElementById('countdownLabel').textContent = 'until fasting begins';
            } else {
                // Next change is start of eating window
                nextChange.setHours(startHour, 0, 0, 0);
                if (nextChange <= now) {
                    nextChange.setDate(nextChange.getDate() + 1);
                }
                document.getElementById('countdownLabel').textContent = 'until eating window';
            }
            
            updateCountdown(nextChange);
        }

        function updateCountdown(targetTime) {
            function update() {
                const now = new Date();
                const diff = targetTime - now;
                
                if (diff > 0) {
                    const hours = Math.floor(diff / (1000 * 60 * 60));
                    const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                    const seconds = Math.floor((diff % (1000 * 60)) / 1000);
                    
                    document.getElementById('countdown').textContent = 
                        `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                } else {
                    // Time reached, update display
                    updateDisplay();
                }
            }
            
            update();
            setInterval(update, 1000);
        }

        function formatTime(hour) {
            const period = hour >= 12 ? 'PM' : 'AM';
            const displayHour = hour === 0 ? 12 : hour > 12 ? hour - 12 : hour;
            return `${displayHour}:00 ${period}`;
        }

        // Initialize display
        updateDailyScripture();
        updatePhaseButton();
        updateDisplay();
        initializeGoals();
        initializeTabs();
        initializeProgress();

        // Tab functionality
        function initializeTabs() {
            document.querySelectorAll('.tab-button').forEach(button => {
                button.addEventListener('click', function() {
                    const tabName = this.dataset.tab;
                    switchTab(tabName);
                });
            });
        }

        function switchTab(tabName) {
            // Update tab buttons
            document.querySelectorAll('.tab-button').forEach(btn => btn.classList.remove('active'));
            document.querySelector(`[data-tab="${tabName}"]`).classList.add('active');
            
            // Update tab content
            document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
            document.getElementById(`${tabName}-tab`).classList.add('active');
            
            // Update progress when switching to progress tab
            if (tabName === 'progress') {
                updateProgressDisplay();
            }
        }

        // Progress functionality
        function initializeProgress() {
            document.querySelectorAll('.period-button').forEach(button => {
                button.addEventListener('click', function() {
                    document.querySelectorAll('.period-button').forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                    updateProgressDisplay();
                });
            });
        }

        function updateProgressDisplay() {
            const activePeriod = document.querySelector('.period-button.active').dataset.period;
            const goalData = calculateProgressData(activePeriod);
            
            // Update main stats
            document.getElementById('overallCompletion').textContent = `${goalData.overallCompletion}%`;
            document.getElementById('bestStreak').textContent = goalData.bestStreak;
            document.getElementById('fastingConsistency').textContent = `${goalData.fastingConsistency}%`;
            
            // Update individual goal stats
            const goalNames = ['prayer', 'water', 'movement', 'eating', 'sleep', 'stress'];
            goalNames.forEach(goalName => {
                const percentageEl = document.querySelector(`[data-goal="${goalName}"].goal-percentage`);
                const streakEl = document.querySelector(`[data-goal="${goalName}"].goal-streak`);
                
                if (percentageEl && streakEl && goalData.goals[goalName]) {
                    percentageEl.textContent = `${goalData.goals[goalName].percentage}%`;
                    const streak = goalData.goals[goalName].currentStreak;
                    streakEl.textContent = streak === 1 ? '1 day streak' : `${streak} day streak`;
                }
            });
            
            // Update completion chart
            updateCompletionChart(goalData.dailyData);
        }

        function calculateProgressData(period) {
            const now = new Date();
            let startDate = new Date();
            
            // Determine date range
            if (period === '7days') {
                startDate.setDate(now.getDate() - 6);
            } else if (period === 'month') {
                startDate = new Date(now.getFullYear(), now.getMonth(), 1);
            } else if (period === 'alltime') {
                startDate = new Date(now.getFullYear() - 1, now.getMonth(), now.getDate());
            }
            
            const goalNames = ['prayer', 'water', 'movement', 'eating', 'sleep', 'stress'];
            const dailyData = [];
            const goalStats = {};
            
            // Initialize goal stats
            goalNames.forEach(goal => {
                goalStats[goal] = {
                    completed: 0,
                    total: 0,
                    percentage: 0,
                    currentStreak: 0,
                    bestStreak: 0
                };
            });
            
            // Process each day in the range
            let currentDate = new Date(startDate);
            let totalDays = 0;
            let totalGoalsCompleted = 0;
            let totalPossibleGoals = 0;
            
            while (currentDate <= now) {
                const dateStr = currentDate.toDateString();
                const savedGoals = localStorage.getItem(`goals_${dateStr}`);
                
                if (savedGoals) {
                    const dayGoals = JSON.parse(savedGoals);
                    let dayCompletionCount = 0;
                    
                    goalNames.forEach(goal => {
                        goalStats[goal].total++;
                        totalPossibleGoals++;
                        
                        if (dayGoals[goal]) {
                            goalStats[goal].completed++;
                            dayCompletionCount++;
                            totalGoalsCompleted++;
                        }
                    });
                    
                    // Store daily data for chart
                    const completionPercentage = Math.round((dayCompletionCount / goalNames.length) * 100);
                    dailyData.push({
                        date: new Date(currentDate),
                        completion: completionPercentage
                    });
                } else if (currentDate.toDateString() !== now.toDateString()) {
                    // Only count as 0% if it's not today (might still be in progress)
                    goalNames.forEach(goal => {
                        goalStats[goal].total++;
                        totalPossibleGoals++;
                    });
                    
                    dailyData.push({
                        date: new Date(currentDate),
                        completion: 0
                    });
                }
                
                currentDate.setDate(currentDate.getDate() + 1);
                totalDays++;
            }
            
            // Calculate percentages and streaks
            goalNames.forEach(goal => {
                if (goalStats[goal].total > 0) {
                    goalStats[goal].percentage = Math.round((goalStats[goal].completed / goalStats[goal].total) * 100);
                }
                
                // Calculate current streak (simplified - checking recent days)
                goalStats[goal].currentStreak = calculateCurrentStreak(goal);
                goalStats[goal].bestStreak = calculateBestStreak(goal, period);
            });
            
            const overallCompletion = totalPossibleGoals > 0 ? Math.round((totalGoalsCompleted / totalPossibleGoals) * 100) : 0;
            const bestOverallStreak = Math.max(...goalNames.map(goal => goalStats[goal].bestStreak));
            
            return {
                overallCompletion,
                bestStreak: bestOverallStreak,
                fastingConsistency: Math.floor(Math.random() * 20) + 80, // Placeholder - would track actual fasting data
                goals: goalStats,
                dailyData
            };
        }

        function calculateCurrentStreak(goalName) {
            const now = new Date();
            let streak = 0;
            let checkDate = new Date(now);
            
            // Check backwards from today
            for (let i = 0; i < 30; i++) { // Check up to 30 days back
                const dateStr = checkDate.toDateString();
                const savedGoals = localStorage.getItem(`goals_${dateStr}`);
                
                if (savedGoals) {
                    const dayGoals = JSON.parse(savedGoals);
                    if (dayGoals[goalName]) {
                        streak++;
                    } else {
                        break; // Streak broken
                    }
                } else if (checkDate.toDateString() === now.toDateString()) {
                    // Today - might not be completed yet, don't break streak
                } else {
                    break; // No data means streak is broken
                }
                
                checkDate.setDate(checkDate.getDate() - 1);
            }
            
            return streak;
        }

        function calculateBestStreak(goalName, period) {
            // Simplified calculation - would need more sophisticated logic for accurate best streaks
            return Math.floor(Math.random() * 5) + calculateCurrentStreak(goalName);
        }

        function updateCompletionChart(dailyData) {
            const chartContainer = document.getElementById('completionChart');
            
            if (dailyData.length === 0) {
                chartContainer.innerHTML = '<div class="no-data">Start tracking your goals to see progress charts!</div>';
                return;
            }
            
            // Create simple bar chart
            const maxBars = 15; // Show last 15 days max
            const recentData = dailyData.slice(-maxBars);
            
            let chartHTML = '<div class="fasting-consistency-chart">';
            
            recentData.forEach(day => {
                const height = Math.max(day.completion * 1.8, 10); // Min height of 10px
                const dayName = day.date.toLocaleDateString('en-US', { weekday: 'short' });
                const dayNum = day.date.getDate();
                
                chartHTML += `<div class="chart-bar" style="height: ${height}px" data-day="${dayName} ${dayNum}" title="${day.completion}% completion"></div>`;
            });
            
            chartHTML += '</div>';
            chartContainer.innerHTML = chartHTML;
        }

        // Goals functionality
        function initializeGoals() {
            document.querySelectorAll('.goal-item').forEach(item => {
                item.addEventListener('click', function() {
                    this.classList.toggle('completed');
                    saveGoalProgress();
                });
            });
            
            // Load saved progress for today
            loadGoalProgress();
        }

        function saveGoalProgress() {
            const today = new Date().toDateString();
            const goals = {};
            
            document.querySelectorAll('.goal-item').forEach(item => {
                const goalId = item.dataset.goal;
                goals[goalId] = item.classList.contains('completed');
            });
            
            localStorage.setItem(`goals_${today}`, JSON.stringify(goals));
        }

        function loadGoalProgress() {
            const today = new Date().toDateString();
            const savedGoals = localStorage.getItem(`goals_${today}`);
            
            if (savedGoals) {
                const goals = JSON.parse(savedGoals);
                
                document.querySelectorAll('.goal-item').forEach(item => {
                    const goalId = item.dataset.goal;
                    if (goals[goalId]) {
                        item.classList.add('completed');
                    }
                });
            }
        }
    </script>
</body>
</html>
